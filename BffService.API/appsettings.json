{
  "ReverseProxy": {
    "Routes": {
      "auth_route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/bff/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/bff/auth" },
          { "PathPrefix": "/api/Auth" }
        ]
      },
      "connect_route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/bff/connect/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/bff/connect" },
          { "PathPrefix": "/connect" }
        ]
      },
      "internal_route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/bff/internal/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/bff/internal" },
          { "PathPrefix": "/api/internal" }
        ]
      },
      "oidc_route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/bff/oidc/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/bff/oidc" },
          { "PathPrefix": "/.well-known" }
        ]
      },
      "user_route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/bff/user/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/bff/user" },
          { "PathPrefix": "/api/userprofiles" }
        ]
      },
      "membership_route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/bff/membership/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/bff/membership" },
          { "PathPrefix": "/api/membership" }
        ]
      },

      "payment_route": {
        "ClusterId": "payment-cluster",
        "Match": {
          "Path": "/api/bff/payment/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/bff/payment" },
          { "PathPrefix": "/api/payments" }
        ]
      },
      "webhook_route": {
        "ClusterId": "payment-cluster",
        "Match": {
          "Path": "/api/bff/webhook/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/bff/webhook" },
          { "PathPrefix": "/api/webhook" }
        ]
      }
    },

    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "user-cluster": {
        "Destinations": {
          "user": {
            "Address": "http://localhost:5005"
          }
        }
      },
      "payment-cluster": {
        "Destinations": {
          "payment": {
            "Address": "http://localhost:5010"
          }
        }
      }
    }
  }
}
